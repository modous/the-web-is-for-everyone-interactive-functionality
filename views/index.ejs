<%- include('./partials/head.ejs') %>
<article class="search">
    <input type="text" class="searchTerm" placeholder="Zoek hier je boek">
    <button type="submit" class="searchButton"> Zoek</button>
    
</article>  

<h1>Boeken overzicht</h1>
<section class="boekenOverzicht">
   
<% results.forEach(result => { %>
   <a href="/detail?resultIsbn<%= result.isbn %>">
    <article class="boek">
        <img src="<%= result.coverimages %>" alt="boek">

       <h2> <%= result.titles[0] %></h2>
    </article>
    </a>

   <% }) %>

</section>



