<%- include('./partials/head.ejs') %>

<div class="search">
    <form action="" method="get" class="search">
       Zoek:
      <input
        id="site-search"
        type="text"
        placeholder="boek..."
        name="search"
      />
    </form>
    </div>
<h1>Boeken overzicht</h1>
<section class="boekenOverzicht">
   
<% results.forEach(result => { %>
   <a href="/detail?id=<%= result.id %>">
    <article class="boek">
        
        <img class="imageAnimatie" src="<%= result.coverimages %>" alt="boek">

       <h2> <%= result.titles[0] %></h2>
    </article>
    </a>

   <% }) %>

</section>



